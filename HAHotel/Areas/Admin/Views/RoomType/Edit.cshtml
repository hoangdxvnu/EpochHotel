@model HAHotel.Models.RoomType

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm())
                        {
                        <div class="form-group">
                            @Html.LabelFor(model => model.TypeName)
                            @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.UrlImage)
                            <input name="UrlImage" type="file">
                            @Html.ValidationMessageFor(model => model.UrlImage, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IsActive)
                            <label class="checkbox-inline">
                                <input data-val="true" data-val-required="The IsActive field is required." id="IsActive" name="IsActive" type="checkbox" value="true">
                                <input name="IsActive" type="hidden" value="false">
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Tạo</button>
                        </div>
                        }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
