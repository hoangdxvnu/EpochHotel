@using HAHotel.Models
@model GridModel<News>

@if(Model?.Data != null && Model.Data.Any())
{
    <section class="resort-overview-block">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Data)
                {
                    <div class="col-md-6 col-sm-12 col-xs-12 remove-padd-right">
                        <div class="side-A">
                            <div class="product-thumb">
                                <div class="image">
                                    <a>
                                        <img src="@item.UrlImage" alt="image" class="img-responsive" style="width: 280px !important; height: 186px !important;" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="side-B">
                            <div class="product-desc-side">
                                <h3>@item.Title</h3>
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                }
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        @Html.Raw(Model.GeneratePagination("links"))
                    </div>
                </div>
            </div>
        </div>
    </section>
}

